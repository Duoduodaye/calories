/* pages/record/record.wxss */

/* 餐次选择 */
.meal-selector {
  padding: 6rpx;
}

.meal-scroll {
  white-space: nowrap;
}

.meal-tabs {
  display: inline-flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 6rpx;
  min-width: 100%;
}

.meal-tab {
  flex: 0 0 auto;
  text-align: center;
  padding: 16rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
  margin-right: 6rpx;
  position: relative;
  white-space: nowrap;
}

.meal-tab:last-child {
  margin-right: 0;
}

.meal-tab.active {
  background: #9CAF88;
  color: white;
}

.snack-tab {
  background: rgba(255, 152, 0, 0.1);
  border: 1rpx solid rgba(255, 152, 0, 0.3);
}

.snack-tab.active {
  background: #FF9800;
  color: white;
  border-color: #FF9800;
}

.tab-snack-dot {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 12rpx;
  height: 12rpx;
  background: #FF9800;
  border-radius: 50%;
}

.snack-tab.active .tab-snack-dot {
  background: white;
}

/* 搜索框 */
.search-box {
  position: relative;
}

.search-input {
  width: 100%;
  height: 88rpx;
  padding: 24rpx 80rpx 24rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #9CAF88;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(156, 175, 136, 0.2);
}

.clear-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  background: rgba(156, 175, 136, 0.1);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #9CAF88;
  transition: all 0.2s ease;
}

.clear-btn:hover {
  background: rgba(156, 175, 136, 0.2);
  transform: translateY(-50%) scale(1.1);
}

/* 分类标签 */
.category-tabs {
  margin: -10rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  padding: 10rpx;
}

.category-tab {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.category-tab.active {
  background: #F0F5ED;
  color: #9CAF88;
}

/* 食物列表 */
.food-list {
  margin-top: 20rpx;
}

.food-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.food-item:hover {
  background: #fafafa;
}

.food-info {
  flex: 1;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.food-details {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.food-category {
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #666;
  margin-right: 16rpx;
}

.food-calories {
  font-size: 24rpx;
  color: #9CAF88;
  font-weight: bold;
}

.food-nutrition {
  display: flex;
  gap: 20rpx;
}

.nutrition-item {
  font-size: 22rpx;
  color: #999;
}

.food-action {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 36rpx;
  color: #9CAF88;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 12rpx;
  margin: 40rpx;
  max-height: 80%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  background: #f0f0f0;
  border: none;
  border-radius: 50%;
  font-size: 36rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 24rpx;
  flex: 1;
  overflow-y: auto;
}

.food-summary {
  text-align: center;
  margin-bottom: 24rpx;
}

.food-calories-per-100g {
  font-size: 28rpx;
  color: #9CAF88;
  font-weight: bold;
}

.weight-input {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #9CAF88;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(156, 175, 136, 0.2);
}

.input::placeholder {
  color: #999;
  font-size: 30rpx;
}

.quick-weights {
  margin-bottom: 24rpx;
}

.weight-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.weight-btn {
  flex: 0 0 auto;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
}

.nutrition-preview {
  margin-top: 24rpx;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-top: 12rpx;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.nutrition-label {
  font-size: 26rpx;
  color: #666;
}

.nutrition-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer button {
  flex: 1;
}

/* 页面标题 */
.page-title {
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 运动列表 */
.exercise-list {
  margin-top: 20rpx;
}

.exercise-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.exercise-item:hover {
  background: #fafafa;
}

.exercise-info {
  flex: 1;
}

.exercise-header {
  display: flex;
  align-items: center;
}

.exercise-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  width: 60rpx;
  text-align: center;
}

.exercise-main {
  flex: 1;
}

.exercise-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.exercise-details {
  display: flex;
  align-items: center;
}

.exercise-category {
  padding: 4rpx 12rpx;
  background: #e8f5e8;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #28a745;
  margin-right: 16rpx;
}

.exercise-calories {
  font-size: 24rpx;
  color: #28a745;
  font-weight: bold;
}

.exercise-action {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 运动模态框 */
.exercise-summary {
  text-align: center;
  margin-bottom: 24rpx;
}

.exercise-calories-per-min {
  display: block;
  font-size: 28rpx;
  color: #28a745;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.exercise-category-label {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
}

.duration-input {
  margin-bottom: 24rpx;
}

.quick-durations {
  margin-bottom: 24rpx;
}

.duration-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.duration-btn {
  flex: 0 0 auto;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
}

.calories-preview {
  margin-top: 24rpx;
  text-align: center;
}

.calories-display {
  margin-top: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #e8f5e8 0%, #f0fff0 100%);
  border-radius: 12rpx;
  border: 2rpx solid #28a745;
}

.calories-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #28a745;
}

.calories-unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}